<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid;assembly=Elmish.Test.CollectionModel.GridView"
        mc:Ignorable="d"
        Title="Elmish.WPF Model collection" Height="674.203" Width="1311.317">
    <Window.Resources>
        <local:IntOptionConverter x:Key="IntOptionConverter" />
        <local:DecimalOptionConverter x:Key="DecimalOptionConverter" />
    </Window.Resources>
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20" />
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gridview in read-write mode, filled with Binding.collectionModel" Grid.Row="0"/>
        <DataGrid x:Name="MainGridView"
                  ItemsSource="{Binding Data, Mode=TwoWay}" 
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  Margin="5"
                  SelectedIndex="0">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete row" 
                              CommandParameter="{Binding PlacementTarget.SelectedIndex, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}" 
                              Command="{Binding DeleteRow}" />
                    <MenuItem Header="Insert row" 
                              CommandParameter="{Binding PlacementTarget.SelectedIndex, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContextMenu}}}" 
                              Command="{Binding InsertRow}" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Country" Binding="{Binding Path=Country, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                <DataGridTextColumn Header="Region" Binding="{Binding Path=Region, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                <DataGridTextColumn Header="Item type" Binding="{Binding Path=ItemType, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                <DataGridTextColumn Header="Sale channel" Binding="{Binding Path=SaleChannel, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                <DataGridTemplateColumn Header="Order Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Path=OrderDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="OrderID" Binding="{Binding Path=OrderID, Mode=TwoWay, UpdateSourceTrigger=LostFocus, Converter={StaticResource IntOptionConverter}}" />
                <DataGridTextColumn Header="UnitSold" Binding="{Binding Path=UnitSold, Mode=TwoWay, UpdateSourceTrigger=LostFocus, Converter={StaticResource IntOptionConverter}}" />
                <DataGridTextColumn Header="UnitPrice" Binding="{Binding Path=UnitPrice, Mode=TwoWay, UpdateSourceTrigger=LostFocus, Converter={StaticResource DecimalOptionConverter}}" />
                <DataGridTextColumn Header="Revenue" Binding="{Binding Path=Revenue, Mode=TwoWay, UpdateSourceTrigger=LostFocus, Converter={StaticResource DecimalOptionConverter}}" />
            </DataGrid.Columns>                                                                                                                 
        </DataGrid>
        <TextBlock Text="DataGrid in read-only mode, filled with Binding.oneWay" Grid.Row="2"/>
        <DataGrid ItemsSource="{Binding DataMirror}" 
                  Grid.Row="3"                
                  AutoGenerateColumns="True" Margin="5">
        </DataGrid>
    </Grid>
</Window>
