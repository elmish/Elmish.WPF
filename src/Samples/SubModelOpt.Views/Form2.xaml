<UserControl
    x:Class="Elmish.WPF.Samples.SubModelOpt.Form2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Padding="10">
  <StackPanel Width="300">
    <TextBlock Text="Form 2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5" />
    <TextBox Text="{Binding Input1, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5" />
    <TextBox Text="{Binding Input2, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,5" />
    <Button Command="{Binding Submit}" Content="Submit" />
  </StackPanel>
</UserControl>
